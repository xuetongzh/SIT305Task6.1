<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewDeliveryActivity">

    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:text="Receiver name："
                android:textColor="#323232"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/receiverName"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/style_edittext"
                android:hint="receiver name"
                android:textColor="#323232" />
        </TableRow>

        <TableRow
            android:id="@+id/group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:text="Pick up date："
                android:textColor="#323232"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pickUpDate"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/style_edittext"
                android:hint="pick up date"
                android:textColor="#323232" />
        </TableRow>

        <TableRow
            android:id="@+id/group3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:text="Pick up time："
                android:textColor="#323232"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pickUpTime"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/style_edittext"
                android:hint="pick up time"
                android:textColor="#323232" />
        </TableRow>

        <TableRow
            android:id="@+id/group4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:text="Pick up location："
                android:textColor="#323232"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pickUpLo"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/style_edittext"
                android:hint="pick up location"
                android:textColor="#323232" />
        </TableRow>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/style_button"
            android:text="NEXT"
            android:textColor="#323232"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="From Sender：ye"
            android:textColor="#323232"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Pick up time：12:00"
            android:textColor="#323232"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="To Receiver：ye"
            android:textColor="#323232"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Pick up time：16:00"
            android:textColor="#323232"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Good Description"
            android:textColor="#323232"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/weight"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/style_edittext"
                android:gravity="center"
                android:hint="Weight"
                android:textColor="#323232" />

            <EditText
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/style_edittext"
                android:gravity="center"
                android:hint="Good Type"
                android:textColor="#323232" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/width"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/style_edittext"
                android:gravity="center"
                android:hint="Width"
                android:textColor="#323232" />

            <EditText
                android:id="@+id/height"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/style_edittext"
                android:gravity="center"
                android:hint="Height"
                android:textColor="#323232" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/length"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/style_edittext"
                android:gravity="center"
                android:hint="Length"
                android:textColor="#323232" />

            <EditText
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/style_edittext"
                android:textColor="#323232" />
        </TableRow>

        <Button
            android:id="@+id/callDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/style_button"
            android:text="CALL DRIVER"
            android:textColor="#323232"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>